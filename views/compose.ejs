<%- include('./partials/header.ejs'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="composeTitle">Title</label><br>
        <input id="composeTitle" class="form-control" type="text" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="composePost">Post</label><br>
        <textarea id="composePost" class="form-control" type="text" name="postBody" rows="5" autocomplete="off"></textarea>
    </div>
    
    <button type="submit" name="" value='' class="btn btn-primary">Publish</button>
</form>

<%- include('./partials/footer.ejs'); -%>














